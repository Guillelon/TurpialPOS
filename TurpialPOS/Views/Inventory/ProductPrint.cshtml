@model DAL.DTO.PrintProductDTO
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>iFarmaLabs Productos</title>
    <link href="http://zipcargomanagersfo.azurewebsites.net/content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <style>
        tr {
            page-break-inside: avoid;
        }

        text {
            font-size: 20px;
        }

        th {
            font-size: 15px;
        }

        #page-container {
            position: relative;
            min-height: 100vh;
        }

        #content-wrap {
            padding-bottom: 2.5rem; /* Footer height */
        }

        #footer {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 2.5rem; /* Footer height */
        }
    </style>
    <div id="page-container">
        <div id="content-wrap">
            <div style="padding-left: 10px; padding-right: 10px; padding-top: 15px">
                <div class="row">
                    <div class="col-md-4">
                        <img width="50%" src="~/Images/iFarmaLabsLogo.png" />
                    </div>
                </div>
                <div class="row" style="margin-top:75px">
                    <div class="col-xs-4">

                    </div>
                    <div class="col-xs-8" style="text-align: right">
                        <text>Fecha: @Model.Date</text>
                    </div>
                </div>
                <div style="margin-top:75px;text-align:center">
                    <h3>LISTA DE PRODUCTOS</h3>
                </div>
                <hr style="height:1px;border:none;color:#333;background-color:#333;" />
                <div class="row">
                    <div class="col-xs-8">
                        <text>Términos generales: </text>
                    </div>
                    <div class="col-xs-4">
                        <text>Usuario:</text>
                    </div>
                </div>
                <div class="row" style="margin-top: 25px">
                    <div class="col-xs-12">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Código de Producto
                                    </th>
                                    <th>
                                        Fábrica
                                    </th>
                                    <th>
                                        Descripción del Producto
                                    </th>
                                    <th>
                                        Stock
                                    </th>
                                    <th>
                                        Código Sanitario
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model.Products)
                                {
                                    <tr>
                                        <td>
                                            @product.Code
                                        </td>
                                        <td>
                                            @product.Factory
                                        </td>
                                        <td>
                                            @product.Name
                                        </td>
                                        <td>
                                            @product.Stock
                                        </td>
                                        <td>
                                            @product.SanitaryCode
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
